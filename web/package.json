{
  "name": "docker-log-viewer-web",
  "version": "1.0.0",
  "type": "module",
  "description": "Web frontend for Docker Log Viewer with GraphQL Explorer",
  "private": true,
  "scripts": {
    "build": "esbuild js/codemirror-graphql-bundle.js --bundle --format=esm --outfile=lib/codemirror-graphql.js",
    "format": "prettier --write \"**/*.{js,html,css,json}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,json}\"",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint \"**/*.js\" --fix"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.12.0",
    "@codemirror/commands": "^6.3.3",
    "@codemirror/language": "^6.10.0",
    "@codemirror/lint": "^6.5.0",
    "@codemirror/state": "^6.4.0",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.23.0",
    "cm6-graphql": "^0.2.1",
    "graphql": "^16.8.1",
    "highlight.js": "^11.11.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2"
  }
}
